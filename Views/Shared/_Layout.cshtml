    <header>
        <div class="row top-menu">
            <div class="col-1 text-center btn" type="button" data-bs-toggle="modal" data-bs-target="#exampleModal">
                <i class="fa-solid fa-bars menu" onclick="open_menu()"></i>
            </div>
            <div class="col-4 text-center ">
                <div class="container h-100">
                    <div class="d-flex justify-content-start h-100">
                        <div class="searchbar">
                            <input class="search_input" type="text" name="" placeholder="Search...">
                            <a href="#" class="search_icon"><i class="fas fa-search"></i></a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-2 text-center logo">
                FBooks
            </div>
            <div class="col-5 d-flex justify-content-end pro-cart">
                <div>
                    <img src="~/Image/ProfilePic.jpg" class="profile">
                </div>
                <div class="">
                    <i class="fa-solid fa-cart-shopping cart"> </i>
                    <span class='badge badge-warning' id='lblCartCount'>
                        1
                    </span>
                </div>
            </div>
        </div>
    </header>
    <div class="modal fade come-from-modal left" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">FBooks</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
