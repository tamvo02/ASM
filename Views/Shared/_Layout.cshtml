        <div class="col-2 bg-danger">

        </div>
        <div class="col-8 container bg-light">
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>
        <div class="col-2 bg-danger">
            
        </div>
    </div>

    <footer class=" row border-top footer-bar bg-dark">
        <div class="container">
            &copy; 2022 - FPT_Library - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
